@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h1>EDIT DETAILS FOR @Html.DisplayFor(model => model.Name)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.PriceRange)
  @Html.EditorFor(model => model.PriceRange)

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")

  <input type="submit" class="btn-block" value="SAVE CHANGES" />
}

@Html.ActionLink("VIEW ALL RESTAURANTS", "Index", "Restaurants", null, new { @class="btn-block" })